<%- include("header") -%>

    <body>

        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>
        </div>

        <div class="box">

            <% newTasks.forEach(function(task){ %>
                <form action="/delete" method="post">
                    <div class="item">

                        <input name="checkBox" type="checkbox" value="<%= task._id %>" onchange="this.form.submit()">


                        <p>
                            <%= task.title %>
                        </p>

                    </div>

                </form>
                
                <% }) %>

                    <form action="/" method="post" class="item">
                        <input type="text" name="newTask" id="tasknew" placeholder="Enter the task to do!">
                        <button type="submit" name="list" value="<%= listTitle %>">+</button>
                    </form>

        </div>





        <%- include("footer") -%>


    </body>